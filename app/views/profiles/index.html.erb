<div class="search-container" data-controller="search-friends">
  <h2 class="text-center new-header">FIND A FRIEND</h2>
  <div class="row justify-content-center search-bar">
    <div class="col-sm-4 my-3">
      <%= form_with url: profiles_path, method: :get, html: {class:"d-flex",
      data: {search_friends_target: "form", action: "keyup->search-friends#update"}} do %>
        <%= text_field :query,
              params[:query],
              class: "form-control",
              placeholder: "Username",
              value: params[:query],
              data: {search_friends_target: "input"}
          %>
        <%#= submit_tag "Search", name: "", class: "search-btn" %>
      <% end %>
    </div>
  </div>
  <div data-search-friends-target="list">
    <%= render partial: "list" %>
  </div>

</div>
